{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "tools/ci/policies/schema/rules.schema.json",
  "type": "object",
  "additionalProperties": false,
  "required": ["rules_schema_version", "rules"],
  "properties": {
    "rules_schema_version": {
      "type": "integer",
      "const": 1
    },
    "rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["rule_id", "policy_type", "severity", "title", "description", "applies_to", "params"],
        "properties": {
          "rule_id": {
            "type": "string",
            "pattern": "^CI-[A-Z0-9_-]+-[0-9]{3}$"
          },
          "policy_type": {
            "type": "string",
            "enum": [
              "artifact_contract",
              "shell_continue_on_error",
              "shell_or_true",
              "shell_set_plus_e",
              "shell_run_block_max_lines",
              "docs_drift",
              "naming_snt"
            ]
          },
          "severity": {
            "type": "string",
            "enum": ["warn", "fail"]
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "minLength": 1
          },
          "applies_to": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "params": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "required_artifacts": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "check_ids": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "artifact_root": {
                "type": "string",
                "minLength": 1
              },
              "scan_paths": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "binary_extensions": {
                "type": "array",
                "items": {
                  "type": "string",
                  "pattern": "^\\.?[a-zA-Z0-9]+$"
                }
              },
              "regex_pattern": {
                "type": "string",
                "minLength": 1
              },
              "max_inline_run_lines": {
                "type": "integer",
                "minimum": 1
              },
              "docs_paths": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "forbidden_patterns": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "allowed_paths": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "ssot_file": {
                "type": "string",
                "minLength": 1
              },
              "summary_json": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    }
  }
}
